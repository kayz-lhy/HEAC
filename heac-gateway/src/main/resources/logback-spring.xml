<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 1. 从 Nacos 读取配置 (关键步骤) -->
    <!-- source: Nacos 中的配置项 key -->
    <!-- name: 本地 logback 变量名 -->
    <!-- defaultValue: 没读到时的默认值 -->
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level.root" defaultValue="INFO"/>
    <springProperty scope="context" name="LOG_PATH" source="logging.file.path" defaultValue="./logs"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="myapp"/>

    <!-- 2. 霓虹配色定义 -->
    <property name="NEON_LOG_PATTERN"
              value="%boldYellow(%d{HH:mm:ss}) %boldMagenta([%thread]) %highlight(%-5level) %boldCyan(%logger{20}) - %msg%n"/>

    <!-- 3. Appender 定义 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${NEON_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 使用从 Nacos 读到的路径和应用名 -->
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 4. 根日志级别引用 Nacos 变量 -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    <logger name="com.alibaba.nacos" level="ERROR"/>
</configuration>
